@model WebRole1.Models.Lotto

@{
    ViewBag.Title = "Lottery";
}

<h2>Lottery</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Lotto Draw</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.numberOfNumbers, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.numberOfNumbers, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numberOfNumbers, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.numberRange, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.numberRange, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numberRange, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
   @if (Request.HttpMethod.ToString() == "POST")
   {
    <div>
        <h4>Lotto Results</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.numberOfNumbers)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.numberOfNumbers)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.numberRange)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.numberRange)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.lottoNumbers)
            </dt>

            <dd>

                @foreach (var item in Model.lottoNumbers)
                {

                    <span>@item</span>
}
             
            </dd>

        </dl>
    </div>
   }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
